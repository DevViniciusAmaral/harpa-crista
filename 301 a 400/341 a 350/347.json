{
  "number": 347,
  "title": "Vem a Cristo",
  "data": [
    {
      "type": "verse",
      "lines": [
        "Vem a Cristo, vem agora,",
        "Vem assim como estás;",
        "De Deus, sem demora,",
        "O perdão obterás."
      ]
    },
    {
      "type": "verse",
      "lines": [
        "Crê e firma tua confiança",
        "Na Sua morte por ti;",
        "Pois gozo alcança,",
        "Todo que faz assim."
      ]
    },
    {
      "type": "verse",
      "lines": [
        "Vem a Cristo, não temendo",
        "Pensa no Seu amor;",
        "Vem logo, mas crendo,",
        "Pois te chama o Senhor."
      ]
    },
    {
      "type": "verse",
      "lines": [
        "Ele anela redimir-te,",
        "Quer livrar-te do mal;",
        "As portas abrir-te,",
        "Do prazer divinal."
      ]
    }
  ],
  "author": "P.L.M Paulo Leivas Macalão",
  "observation": "Pode ser que tenha outro co-autor"
}
