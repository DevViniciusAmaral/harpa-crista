{
  "number": 343,
  "title": "Abre o Coração",
  "data": [
    {
      "type": "verse",
      "lines": [
        "Ó pecador que não tens luz.",
        "Abre o coração;",
        "Aceita hoje o bom Jesus;",
        "Abre o coração!"
      ]
    },
    {
      "type": "chorus",
      "lines": [
        "Quem sinto bater no meu coração?",
        "Jesus diz: “Abre sem tardar o teu coração”."
      ]
    },
    {
      "type": "verse",
      "lines": [
        "Tu que almejas salvo ser.",
        "Abre o coração;",
        "A paz de Deus vem obter,",
        "Abre o coração!"
      ]
    },
    {
      "type": "verse",
      "lines": [
        "Que meiga voz escutas já!",
        "Abre o coração;",
        "Jesus tua alma salvará,",
        "Abre o coração!"
      ]
    },
    {
      "type": "verse",
      "lines": [
        "Sim, hoje vem em Cristo crer",
        "Abre o coração;",
        "No amanhã que vai haver?",
        "Abre o coração!"
      ]
    },
    {
      "type": "verse",
      "lines": [
        "Ouvindo a voz do bom Jesus,",
        "Abre o coração;",
        "Ó vem depressa, vem pra luz,",
        "Abre o coração!"
      ]
    }
  ],
  "author": "P.L.M Paulo Leivas Macalão",
  "observation": "Pode ser que tenha outro co-autor"
}
