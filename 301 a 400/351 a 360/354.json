{
  "number": 354,
  "title": "O Cuidado da Alma",
  "data": [
    {
      "type": "verse",
      "lines": [
        "Eu tenho que guardar",
        "Minh’alma imortal,",
        "E prepará-la para entrar,",
        "No reino celestial."
      ]
    },
    {
      "type": "verse",
      "lines": [
        "P’ra isto eu fazer,",
        "Meu Deus, vem me ajudar;",
        "A Teu serviço, sim, meu ser,",
        "Te quero consagrar."
      ]
    },
    {
      "type": "verse",
      "lines": [
        "Teu filho quero ser,",
        "De todo coração",
        "E para sempre obter",
        "Tua eterna proteção."
      ]
    },
    {
      "type": "verse",
      "lines": [
        "Ajuda-me a velar,",
        "Na fé me firmar bem,",
        "Pois em Ti posso confiar,",
        "E descansar também!"
      ]
    }
  ],
  "author": "P.L.M Paulo Leivas Macalão",
  "observation": "Pode ser que tenha outro co-autor"
}
